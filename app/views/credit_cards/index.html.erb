<h1>Listing credit_cards</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Provider</th>
      <th>Validation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.provider %></td>
        <td><%= credit_card.number %></td>
        <td>(<%= credit_card.validation %>)</td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit card', new_credit_card_path %>
