<h1>List of the cards</h1>

<table>
  <thead>
    <tr>
      <h2><th>Number</th></h2>
      <h2><th>Provider</th></h2>
      <h2><th>Validation</th></h2>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><p><%= credit_card.provider %>:</p></td>
        <td><p><%= credit_card.number %></p></td>
        <td><p>(<%= credit_card.validation %>)</p></td>
        <td><p><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </p></tr>
    <% end %>
    <td><%= link_to 'Add credit card', new_credit_card_path %><td>
  </tbody>
</table>

<br>

